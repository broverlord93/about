{
  "compilerOptions": {
    "useDefineForClassFields": true,
    "skipLibCheck": true,
    "module": "ESNext",
    /* Bundler mode */
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "moduleResolution": "Bundler",
    "noEmit": true,
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    /* INTEROP */
    "allowSyntheticDefaultImports": true,
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@assets/*": [
        "src/assets/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@lib/*": [
        "src/lib/*"
      ],
      "@redux/*": [
        "src/redux/*"
      ],
      "@routes/*": [
        "src/routes/*"
      ],
      "@src/*": [
        "src/*"
      ],
      "@type-defs/*": [
        "src/types/*"
      ]
    }
  },
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
